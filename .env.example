# Example environment variables for MediaSet development

# Frontend (Remix) Configuration
apiUrl=http://api:5000
NODE_ENV=development
REMIX_DEV_HTTP_ORIGIN=http://localhost:3000

# API (.NET) Configuration  
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000;https://+:5001
MediaSetDatabase__ConnectionString=mongodb://mongodb:27017
MediaSetDatabase__DatabaseName=MediaSet
OpenLibraryConfiguration__BaseUrl=https://openlibrary.org/
OpenLibraryConfiguration__Timeout=30
OpenLibraryConfiguration__ContactEmail=your-email@example.com

# Barcode Lookup API Configuration
# Get your API key from: https://www.barcodelookup.com/api
BarcodeLookupConfiguration__BaseUrl=https://api.barcodelookup.com/v3/
BarcodeLookupConfiguration__ApiKey=your_barcode_lookup_api_key_here
BarcodeLookupConfiguration__Timeout=30

# The Movie Database (TMDb) API Configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TmdbConfiguration__BaseUrl=https://api.themoviedb.org/3/
TmdbConfiguration__ApiKey=your_tmdb_api_key_here
TmdbConfiguration__Timeout=30

# MongoDB Configuration
MONGO_INITDB_DATABASE=MediaSet