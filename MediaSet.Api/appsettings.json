{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ExternalLogging": {
    "Enabled": false
  },
  "HttpLoggingFilterOptions": {
    "ExcludedPaths": [
      "/api/logs",
      "/health",
      "/health/ready",
      "/health/live",
      "/config/integrations"
    ],
    "ExcludePathStartsWith": [
      "/api/health",
      "/swagger"
    ]
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": ["FromLogContext"]
  },
  "CacheSettings": {
    "EnableCaching": true,
    "DefaultCacheDurationMinutes": 10,
    "MetadataCacheDurationMinutes": 10,
    "StatsCacheDurationMinutes": 10
  },
  "ImageConfiguration": {
    "StoragePath": "/app/data/images",
    "MaxFileSizeMb": 5,
    "AllowedImageExtensions": "jpg,jpeg,png",
    "HttpTimeoutSeconds": 30,
    "MaxDownloadSizeMb": 10
  },
  "IgdbConfiguration": {
    "BaseUrl": "https://api.igdb.com/v4/",
    "TokenUrl": "https://id.twitch.tv/oauth2/token",
    "Timeout": 30,
    "AttributionUrl": "https://www.igdb.com/",
    "LogoPath": "/integrations/igdb.svg"
  },
  "BackgroundImageLookupConfiguration": {
    "Enabled": false,
    "Schedule": "0 2 * * *",
    "MaxRuntimeMinutes": 60,
    "BatchSize": 25,
    "RequestsPerMinute": 5
  }
}
