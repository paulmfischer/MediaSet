<MsInputText Label="@nameof(Book.Format)" @bind-Value="Book!.Format" ValidationFor="@(() => Book!.Format)" />
<MsInputNumber Label="@nameof(Book.Pages)" @bind-Value="Book!.Pages" ValidationFor="@(() => Book!.Pages)" />
